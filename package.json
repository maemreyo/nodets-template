{
  "name": "nodets_template",
  "version": "1.0.1",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "release": "node scripts/release.js",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "docs": "typedoc",
    "prepare": "husky install",
    "postinstall": "npm run prepare && npm run husky-setup",
    "husky-setup": "npx husky add .husky/pre-commit 'npx lint-staged'"
  },
  "standard-version": {
    "preset": "angular"
  },
  "keywords": [
    "typescript",
    "nodejs"
  ],
  "author": "Matthew Ngo <matthew.ngo1114@gmail.com>",
  "repository": {
    "type": "git",
    "url": ""
  },
  "devDependencies": {
    "@types/node": "^20.16.2",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.26.6",
    "typescript": "^4.9.5"
  },
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "tsc --noEmit"
    ]
  }
}
